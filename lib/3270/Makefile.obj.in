# Makefile for 3270 emulation library

LIB3270 = lib3270.a

RM = rm -f
CC = @CC@

BUILD_CC = @BUILD_CC@
BUILD_LDFLAGS = @BUILD_LDFLAGS@
BUILD_LIBS = @BUILD_LIBS@
BUILD_CFLAGS = @BUILD_CFLAGS@

AR = @AR@
RANLIB = @RANLIB@

all: $(LIB3270)

INCS = lib3270_files.mk lib3270u_files.mk
include $(INCS)
OBJS = $(LIB3270_OBJECTS) $(LIB3270U_OBJECTS)

LIBDIR = @libdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
sysconfdir = @sysconfdir@
datarootdir = @datarootdir@
LIBX3270DIR = @LIBX3270DIR@

CCOPTIONS = @CCOPTIONS@
XCPPFLAGS = -I$(THIS) -I$(THIS)/../include/unix -I$(THIS)/../include -I$(TOP)/include -DLIBX3270DIR=\"$(LIBX3270DIR)\" @CPPFLAGS@
CFLAGS = $(CCOPTIONS) $(CDEBUGFLAGS) $(XCPPFLAGS) @CFLAGS@

include buildmacros.mk

$(LIB3270): $(OBJS) $(INCS)
	$(AR) cr $@ $(OBJS)
	$(RANLIB) $@

favicon.o: favicon.c

favicon.c: favicon.ico mkicon
	./mkicon $< >$@

mkicon: mkicon.c
	$(BUILD_CC) $(BUILD_CFLAGS) -o $@ $< $(BUILD_LDFLAGS) $(BUILD_LIBS)

clean:
	$(RM) *.o favicon.c mkicon $(LIB3270)

clobber: clean
	$(RM) *.d

-include $(OBJS:.o=.d)
