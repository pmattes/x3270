# Windows Makefile for playback

# Set GT_PFX, BUILDXSFX, BUILD_CC, CC, WINDRES and WIN32_FLAGS.
include winenv.mk

XCPPFLAGS = $(WIN32_FLAGS) -I$(THIS) -I$(TOP)/include
CFLAGS = $(EXTRA_FLAGS) -g -Wall -Werror -MMD -MP $(XCPPFLAGS)

ifdef WIN64
HOST = win64
else
HOST = win32
endif
W = w
include playback_files.mk libs.mk

LIBS = -lws2_32
LIBDEPS = $(DEP3270) $(DEP32XX)
DLLFLAGS = $(EXTRA_FLAGS) -mno-cygwin -shared -Wl,--export-all-symbols -Wl,--enable-auto-import

PROGS = playback.exe
all: $(PROGS)

playback.exe: $(PLAYBACK_OBJECTS) $(LIBDEPS)
	$(CC) -o $@ $(CFLAGS) $(PLAYBACK_OBJECTS) $(LD3270) $(LD32XX) $(LIBS)

clean:
	rm -f *.o

clobber: clean
	rm -f $(PROGS) *.d

# Include auto-generated eependencies
-include $(OBJS:.o=.d)
